@import('../../variables.styl')

.button
    font-family: inherit
    border: 0
    background: #fff
    height: 30px
    margin: 0
    border-radius: 3px
    padding: 0 .6em
    box-shadow: inset 0 0 0 1px $borderColor
    box-sizing: border-box
    display: inline-block
    font-size: 100%
    outline: none

    &:active
        box-shadow: 0 0 1 0 rgba(0, 0, 0, 0.5)
