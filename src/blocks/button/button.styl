.button
    border: 0
    background: #fff
    height: 30px
    margin: 0
    border-radius: 2px
    padding: 0 15px
    box-shadow: 0 1px 2px 0px rgba(0, 0, 0, 0.5)
    box-sizing: border-box
    display: inline-block
    font-size: inherit
    font-weight: inherit
    transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms
    cursor: pointer
    outline: none

    &:active
        box-shadow: 0 0 1 0 rgba(0, 0, 0, 0.5)
