@import('../../variables.styl')

.event
    width: $colWidth
    height: $rowHeight
    margin: 0 $gapHorizontal $gapVertical 0
    padding: 20px
    box-sizing: border-box

    float: left

    background: #fff
    box-shadow: inset 0 0 0 1px $borderColor

    &__title
        font-size: 150%

        display: inline-block

        margin: 0 0 .5em

    &_now
        width: $colWidth * 3 + $gapHorizontal * 2

        box-shadow: inset 0 0 0 7px $yellowColor

        .event__title
            font-size: 300%

    &_next
        width: $colWidth * 2 + $gapHorizontal

    &_outdated
        color: rgba(0, 0, 0, .6)
        background: rgba(255, 255, 255, .5)


@media screen and (max-width: $minimalPageWidth)
    .event
        width: 100%

        & &__title
            font-size: 150%

@media screen and (min-width: $minimalPageWidth) and (max-width: $mediumPageWidth)
    .event
        &_now
            width: $colWidth * 2 + $gapHorizontal
